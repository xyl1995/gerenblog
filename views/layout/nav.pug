.blog-header.layui-bg-black
      .layui-container
        ul.layui-nav
          li.layui-nav-item#haha
            a(href="/")
              i.layui-icon.layui-icon-home 
              | 首页
          li.layui-nav-item
            a(href="/log") 博客日志
          li.layui-nav-item
            a(href="/GWriting") 博客好文
          li.layui-nav-item
            a(href="/resource") 博客资源
          li.layui-nav-item
            a(href="/canvas") canvas音乐播放
          li.layui-nav-item
            a(href="/blogger") 关于博主
        //- 用户登录按钮
        ul.layui-nav.blog-user

          if session && !session.isNew
            li.layui-nav-item
              a(href=session.role > 1 ? "/admin/user": "/admin/article") 个人中心
                //- span.layui-badge-dot
            li.layui-nav-item
              a(href="")
                //- 用户测试头像
                img(src=session.avatar).layui-nav-img
                span= session.username
              dl.layui-nav-child
                dd
                  a(href="/user/logout") 退了
          else
            li.layui-nav-item
              a(href="/user/login") 登入
            li.layui-nav-item
              a(href="/user/reg") 注册